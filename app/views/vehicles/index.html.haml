%h1 Listing Vehicles


%ul.nav.navbar-nav
  %li.searchwrap
    .searchbox
      = form_tag search_vehicle_path, method: :get do
        = text_field_tag "search", nil, placeholder: "Company Search..."
        %span.searchicon
          %i.fa.fa-search
%table
  %tr
    %th VIN ID
    %th Description
    %th Average Daily Price
  - @vehicles.each do |vehicle|
    %tr
      %td= vehicle.id
      %td= vehicle.description
      %td= Rental.where(vehicle_id: vehicle.vehicle_id).avg(:total_amount)
